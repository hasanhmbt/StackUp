@model IEnumerable<StackUp.Application.DTOs.CategoryDTO>
@{
    ViewData["Title"] = "Categories";
}
<div class="page-header">
    <div class="content-page-header">
        <h5>Categories</h5>
        <div class="list-btn">
            <ul class="filter-list">
                <li>
                    <a class="btn btn-primary" asp-controller="Categories" asp-action="Create">
                        <i class="fa fa-plus-circle me-2" aria-hidden="true"></i>Add Categories
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div id="filter_inputs" class="card filter-card">
    <div class="card-body pb-0">
        <form method="get" asp-controller="Categories" asp-action="Index">
            <div class="row">
                <div class="col-sm-6 col-md-3">
                    <div class="input-block mb-3">
                        <label>Name</label>
                        <input type="text" name="CategoryName" class="form-control" value="@ViewBag.CurrentFilter">
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <button type="submit" class="btn btn-primary mt-4">Filter</button>
                    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary mt-4">Reset</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-table">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-stripped table-hover datatable">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Category Name</th>
                                <th>Parent Category</th>
                                <th>Date</th>
                                <th class="no-sort">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                int index = 1;
                                foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@category.CategoryName</td>
                                        <td>@category.ParentName</td>
                                        <td>01/01/01</td>
                                        <td class="d-flex align-items-center">
                                            <a class="btn-action-icon me-2" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">
                                                <i class="fe fe-edit"></i>
                                            </a>
                                            <a class="btn-action-icon" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" onclick="return confirm('Are you sure you want to delete this category?');">
                                                <i class="fe fe-trash-2"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-end m-2">
    @if (ViewBag.TotalPages > 1)
    {
        <ul class="pagination pagination-sm mb-0">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" tabindex="-1">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">Next</a>
            </li>
        </ul>
    }
</div>
