@model StackUp.Application.DTOs.CategoryDTO

<div class="card mb-0">
    <div class="card-body">
        <div class="page-header">
            <div class="content-page-header">
                <h5>Add Category</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="form-group-item">
                    <h5 class="form-title">Category Details</h5>
                    <div class="row">

                        <!-- Category Name -->
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="input-block mb-3">
                                <label>Category Name <span class="text-danger">*</span></label>
                                <input asp-for="CategoryName" type="text" class="form-control" placeholder="Enter Category Name">
                            </div>
                        </div>

                        <!-- Parent Category Dropdown -->
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="input-block mb-3">
                                <label>Parent Category</label>
                                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentCategories">
                                    <option value="">Select Parent Category</option>
                                </select>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="input-block mb-3">
                                <label>Category Description</label>
                                <textarea asp-for="Description" class="form-control" placeholder="Enter Description"></textarea>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="text-end">
                    <button type="reset" class="btn btn-secondary cancel me-2" >
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>

@section css
{
    <link href="~/main/plugins/summernote/summernote-lite.min.css" rel="stylesheet" />
}
@section js
{
    <script src="~/main/plugins/summernote/summernote-lite.min.js"></script>
}
